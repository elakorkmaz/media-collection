doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title Ela's bookshelf
    meta(name='description', content='My book website')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(type="text/css" rel="stylesheet" href='/css/bootstrap.min.css')
    link(type="text/css" rel="stylesheet" href='/css/main.css')
  body
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Ela's media


    div.container
      .row
        .col-sm-6.col-md-4
          img(class="img-fluid" src=book.imageUrl width="260" height="400")
        .col-sm-6.col-md-4
          h2= book.title
          h4 written by #{book.authorName}
          p= book.description
          p Number of pages: #{book.numberOfPages}
